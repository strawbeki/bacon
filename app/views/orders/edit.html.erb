<% provide(:title, "edit order") %> 
<h1>edit your order?</h1>

<div class="row">
  <div class="span6 offset3">

    <%= form_for(@order) do |f| %>
      <%= render 'shared/errors' %>

      <%= f.label :name %>
      <%= f.text_field :name %><br>

    <%= label_tag(:roll, "kind of roll") %>
      white: <%= f.radio_button(:roll, 'white') %>    
      brown: <%= f.radio_button(:roll, 'brown') %>
      seeded: <%= f.radio_button(:roll, 'seeded') %>

    <%= label_tag(:filling, "filling") %>
     <%= check_box_tag("filling[]", 'bacon') %> bacon <br>
     <%= check_box_tag(:"filling[]",'sausage') %> sausage <br>
     <%= check_box_tag(:"filling[]",'egg') %> egg <br>
     <%= check_box_tag(:"filling[]", 'black pudding') %> black pudding <br>
     <%= check_box_tag(:"filling[]", 'lorne sausage') %> lorne sausage <br>
     <%= check_box_tag(:"filling[]", 'blt') %> blt <br>
     <%= check_box_tag(:"filling[]", 'cheese') %> cheese <br>
     <%= check_box_tag(:"filling[]", 'mince') %> mince <br>
     <%= check_box_tag(:"filling[]", 'steak & onion') %> steak and onion <br>
   
    <%= f.label :sauce %>
      <%= f.text_field :sauce, :maxlength => 140 %><br>

    <%= f.label :notes %>
      <%= f.text_field :notes, :maxlength => 140 %><br>

     <br><br>
      <%= f.submit "save changes", class: "btn btn-custom" %>

  </div>
</div>
<% end %>